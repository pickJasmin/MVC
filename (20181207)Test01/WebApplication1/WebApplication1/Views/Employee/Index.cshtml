@model WebApplication1.ViewModels.EmployeeListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@Model.UserName,@Model.Greeting</h2>
    <p><a href="/Employee/AddNew">新增</a></p>

    <div>
        <form action="/employee/SelectEmployee" method="post">
            请输入你要检索的内容：<input type="text" name="name">
            <input type="submit" value="搜索">
        </form>

        <ul>


            @foreach (var item in Model.EmployeeViewList)
            {
                <li>
                    @item.EmployeeName,@item.EmployeeGrade,@item.EmployeeSalary&nbsp;&nbsp;
                    <a href="/Employee/DeleteEmployee/@item.EmployeeID">删除</a>&nbsp;&nbsp;
                    <a href="/Employee/UpdateEmployee/@item.EmployeeID">更新</a>
                </li>
            }
        </ul>

    </div>
</body>
</html>
